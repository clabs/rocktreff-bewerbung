	{{render "xhrprogress"}}
	<div class="container">
		<div>
			{{#link-to 'home' classNames="navbar-brand"}}{{/link-to}}
		</div>
		<div>
			{{#if BB.userExists}}
				<ul class="nav navbar-nav">
					{{#if BB.user.isNeither}}
					<li>
						{{#if BB.currentBid}}
							{{#link-to 'bid' BB.currentBid}} Meine Bewerbung{{/link-to}}
						{{else}}
							{{#link-to 'NewBid'}} Meine Bewerbung{{/link-to}}
						{{/if}}
					</li>
					{{else}}
					<li>
						{{#link-to 'bids'}}Bewerbungen{{/link-to}}
					</li>
					{{/if}}
					{{#if BB.user.isAdmin}}
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration {{icon "caret-down"}}</a>
						<ul class="dropdown-menu">
							<li>{{#link-to 'users'}}{{icon "group"}} Users{{/link-to}}</li>
